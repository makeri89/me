---
export interface Props {
	title: string;
	period: string;
	body: string;
}

const { title, period, body } = Astro.props;
---

<div class="rounded-lg w-full">
		<h2 class="text-xl mb-2 font-bold">
			{title}
		</h2>
		<p class="text-md italic mb-2">
			{period}
		</p>
		<p class="text-lg">
			{body}
		</p>
</div>